# ============================================
# ROOT ENVIRONMENT VARIABLES
# ============================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# ----------------------------------------
# General Configuration
# ----------------------------------------
NODE_ENV=production
COMPOSE_PROJECT_NAME=okobiz-property

# ----------------------------------------
# MongoDB Configuration (Local Docker)
# ----------------------------------------
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_secure_mongo_password_here
MONGO_DATABASE=properties

# For server connection (internal Docker network)
MONGODB_URI=mongodb://admin:your_secure_mongo_password_here@mongodb:27017/properties?authSource=admin

# ----------------------------------------
# Redis Configuration (Cloud)
# ----------------------------------------
REDIS_URI=redis://default:your_redis_password@your-redis-host:port

# ----------------------------------------
# JWT Secrets (CHANGE THESE!)
# ----------------------------------------
JWT_ACCESS_TOKEN_SECRET_KEY=your_access_token_secret_min_32_chars
JWT_REFRESH_TOKEN_SECRET_KEY=your_refresh_token_secret_min_32_chars

# ----------------------------------------
# URLs Configuration
# ----------------------------------------
# For Development (Docker)
CLIENT_BASE_URL=http://localhost
SERVER_BASE_URL=http://localhost/api/v1

# For Production (Replace with your domain)
# CLIENT_BASE_URL=https://yourdomain.com
# SERVER_BASE_URL=https://yourdomain.com/api/v1

# ----------------------------------------
# SMTP Configuration (Email)
# ----------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# ----------------------------------------
# Admin Account Configuration
# ----------------------------------------
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your_secure_admin_password
ADMIN_NAME=Administrator

# ----------------------------------------
# Client Environment Variables
# ----------------------------------------
NEXT_PUBLIC_API_BASE_URL=http://localhost/api/v1
NEXT_PUBLIC_API_ADMIN_URL=http://localhost/admin

# For Production:
# NEXT_PUBLIC_API_BASE_URL=https://yourdomain.com/api/v1
# NEXT_PUBLIC_API_ADMIN_URL=https://yourdomain.com/admin

# ----------------------------------------
# Admin Environment Variables
# ----------------------------------------
VITE_API_BASE_URL=http://localhost/api/v1

# For Production:
# VITE_API_BASE_URL=https://yourdomain.com/api/v1
