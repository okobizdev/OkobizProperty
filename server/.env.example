# ============================================
# SERVER ENVIRONMENT VARIABLES (Node.js API)
# ============================================
# Copy this file to .env for local development
# NEVER commit .env to version control!

# ----------------------------------------
# Application Configuration
# ----------------------------------------
NODE_ENV=development
PORT=5001

# For Docker/Production, use port 5000
# PORT=5000

# ----------------------------------------
# Database Configuration
# ----------------------------------------
# Local Development (MongoDB Atlas or local MongoDB)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/properties?retryWrites=true&w=majority

# Docker Development (connects to mongodb service)
# MONGODB_URI=mongodb://admin:admin123@mongodb:27017/properties?authSource=admin

# Local MongoDB
# MONGODB_URI=mongodb://localhost:27017/properties

# ----------------------------------------
# Redis Configuration (Cloud)
# ----------------------------------------
REDIS_URI=redis://default:password@your-redis-host:port

# ----------------------------------------
# JWT Configuration
# ----------------------------------------
# Generate secure random strings (min 32 characters)
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_ACCESS_TOKEN_SECRET_KEY=your_access_token_secret_key_here_min_32_chars
JWT_REFRESH_TOKEN_SECRET_KEY=your_refresh_token_secret_key_here_min_32_chars

# ----------------------------------------
# URLs Configuration
# ----------------------------------------
# Local Development
CLIENT_BASE_URL=http://localhost:3000
SERVER_BASE_URL=http://localhost:5001/api/v1

# Docker Development
# CLIENT_BASE_URL=http://nginx
# SERVER_BASE_URL=http://nginx/api/v1

# Production
# CLIENT_BASE_URL=https://yourdomain.com
# SERVER_BASE_URL=https://yourdomain.com/api/v1

# ----------------------------------------
# SMTP Configuration (Email)
# ----------------------------------------
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_gmail_app_password

# ----------------------------------------
# Admin Account
# ----------------------------------------
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your_secure_admin_password_here
ADMIN_NAME=Administrator

# ----------------------------------------
# Cloudinary (if used for image uploads)
# ----------------------------------------
# CLOUDINARY_CLOUD_NAME=your_cloud_name
# CLOUDINARY_API_KEY=your_api_key
# CLOUDINARY_API_SECRET=your_api_secret
